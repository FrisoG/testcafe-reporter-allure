{
  "name": "testcafe-reporter-isaac",
  "version": "0.0.0-develop",
  "author": "ISAAC E-commerce Solutions BV",
  "license": "MIT",
  "description": "An Allure reporter plugin for TestCafé. Used to generate test reports for e2e-tests.",
  "keywords": [
    "testcafé",
    "allure",
    "integration"
  ],
  "main": "index.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/isaaceindhoven/testcafe-reporter-isaac.git"
  },
  "bugs": {
    "url": "https://github.com/isaaceindhoven/testcafe-reporter-isaac/issues"
  },
  "homepage": "https://github.com/isaaceindhoven/testcafe-reporter-isaac#readme",
  "scripts": {
    "build:prod": "tsc --build tsconfig.prod.json",
    "build:test": "tsc --build tsconfig.test.json",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "eslint --ext .js,.ts --ignore-pattern !.* --ignore-path .gitignore .",
    "test:lint:fix": "eslint --ext .js,.ts --ignore-pattern !.* --ignore-path .gitignore . --fix",
    "test:unit": "jest --config .jestrc.js",
    "version": "node -v",
    "semantic-release": "semantic-release"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "commitizen": "^4.0.4",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4",
    "semantic-release": "^17.0.4",
    "ts-jest": "^25.3.1",
    "typescript": "^3.8.3"
  }
}
